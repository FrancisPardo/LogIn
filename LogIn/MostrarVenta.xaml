        <Label Content="id:" HorizontalAlignment="Left" Margin="15,116,0,0" VerticalAlignment="Top" FontSize="20" Width="35" Foreground="White"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="221,54,0,0" VerticalAlignment="Top" FontSize="20" Width="90" Foreground="White"/>
        <Button Click="BtnAtras_Click" Name="btnAtras" Content="" Width="45" Height="45" Margin="0,4,281,520" HorizontalAlignment="Stretch" Style="{StaticResource MyButton}" RenderTransformOrigin="0.533,-0.181">
            <Button.Background>
                <ImageBrush ImageSource="/windows_media_player_back_button_preview.png" />
            </Button.Background>
        </Button>
        <Label Foreground="White" x:Name="lblf" Content="-" HorizontalAlignment="Left" Height="28" Margin="125,10,0,0" VerticalAlignment="Top" Width="258" Grid.ColumnSpan="2"/>
