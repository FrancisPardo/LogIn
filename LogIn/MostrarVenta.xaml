        <Label x:Name="lbltot" Content="0" HorizontalAlignment="Left" Height="25" Margin="62,365,0,0" VerticalAlignment="Top" Width="56" Grid.Column="1"/>
        <ListBox x:Name="lb7" HorizontalAlignment="Left" Height="148" Margin="10,433,0,0" VerticalAlignment="Top" Width="746" Grid.ColumnSpan="2"/>
        <Button x:Name="btn2" Content="Realizar Venta" HorizontalAlignment="Left" Height="30" Margin="27,386,0,0" VerticalAlignment="Top" Width="406" Click="btn2_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btn3" Content="todas las ventas" HorizontalAlignment="Left" Height="30" Margin="179,386,0,0" Click="Btn3_Click" VerticalAlignment="Top" Width="200" Grid.Column="1"/>
