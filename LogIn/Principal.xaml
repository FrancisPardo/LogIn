<Window x:Class="LogIn.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogIn"
        mc:Ignorable="d"
        Title="Principal" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button  Width="600" Height="50" Margin="20" FontSize="20" Content="Productos" Name="btnProductos" Background="Brown" Foreground="White" FontWeight="SemiBold" Click="Producto"/>
            <Button  Width="600" Height="50"  Margin="20" FontSize="20" Content="Ventas" Name="btnVentas" Background="Brown" Foreground="White" FontWeight="SemiBold" Click="Ventas"/>
            <Button  Width="600" Height="50"  Margin="20" FontSize="20" Content="Reportes" Name="btnReportes" Background="Brown" Foreground="White" FontWeight="SemiBold"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Height="80" Width="300" Margin="0,339,0,0">
            <Button Background="Brown"  Name="btnSomos" Content="Quienes Somos" Margin="1" Width="250" Height="40" FontSize="30" RenderTransformOrigin="0.5,0.5" Foreground="White" FontWeight="SemiBold" Click="OpenWindow"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Height="80" Width="300" Margin="0,339,0,0">
            <Button Click="BtnCerrar_Click" Background="Brown"  Name="btnCerrar" Content="Salir" Margin="20" Width="250" Height="40" FontSize="30" RenderTransformOrigin="0.5,0.5" Foreground="White" FontWeight="SemiBold" />
        </StackPanel>
    </Grid>
</Window>

